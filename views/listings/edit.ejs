<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2>update Details</h2>
                <form action="/listings/<%= listing.id %>?_method=PUT" method="post" novalidate
                    class="needs-validation" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label class="form-label" for="title">Title: </label>
                        <input type="text" id="title" name="listing[title]" placeholder="Add a catchy title"
                            class="form-control" value="<%= listing.title %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="description">description: </label>
                        <textarea id="description" name="listing[description]" placeholder="description"
                            class="form-control" required> <%= listing.description %></textarea>
                        <div class="invalid-feedback">
                            Enter description
                        </div>
                    </div>

                    <div class="mb-3">
                       Original Listing Image <br />
                       <img src="<%= originalImage %>" width="200px">
                    </div>


                    <div class="mb-3">
                        <label class="form-label" for="image">Upload New Image  </label>
                        <input type="file" id="image" name="listing[image]" 
                            class="form-control" >
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label class="form-label" for="price">price: </label>
                            <input type="text" id="price" name="listing[price]" placeholder="10000" class="form-control"
                                value="<%= listing.price %>" required>
                            <div class="invalid-feedback">
                                Enter price
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label class="form-label" for="country">country: </label>
                            <input type="text" id="country" name="listing[country]" placeholder="India"
                                class="form-control" value="<%= listing.country %>" required>
                            <div class="invalid-feedback">
                                Enter country
                            </div>

                        </div>
                    </div>

                    <div class="mb-3 ">
                        <label class="form-label" for="location">location: </label>
                        <input type="text" id="location" name="listing[location]" placeholder="Katihar, Bihar"
                            class="form-control" value="<%=  listing.location %>" required>
                        <div class="invalid-feedback">
                            Enter the country name
                        </div>
                    </div>
                    <button class="btn btn-dark edit-btn mt-3">Update</button>
                    <br><br>
            </div>
        </div>
    </body>