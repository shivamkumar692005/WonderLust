<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h1>
                <%= listing.title %>
            </h1>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_img">
            <div class="card-body">
                <p class="card-text">owned by: <i>
                        <%= listing.owner.username %>
                    </i><br></p>

                <p class="card-text">
                    <%= listing.description %> <br>
                </p>
                <p class="card-text"> &#8377; <%= listing.price %> <br></p>
                <p class="card-text">
                    <%= listing.location %> <br>
                </p>
                <p class="card-text">
                    <%= listing.country %> <br>
                </p>


            </div>
        </div>
        <br>

        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="btns mb-4">
                <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <form action="/listings/<%= listing.id %>/?_method=DELETE" method="post">
                    <button class="btn btn-dark offset-5">DELETE</button>
                </form>
            </div>
            <% } %>



                <div class="col-8 offset-3 mb-3 mt-3">
                    <hr>
                    <% if (currUser) { %>
                        <h4>Leave a review</h4>
                        <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate
                            class="needs-validation">
                            <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Rating</label>
                                <input type="range" min="1" max="5" name="review[rating]" id="rating"
                                    class="form-range">
                            </div>

                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" id="comment" row="5" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">Please Enter some comments</div>
                            </div>
                            <button class="btn btn-outline-dark">Submit</button>
                        </form>
                        <hr>

                        <% } %>

                            <p><b>All Reviews</b></p>


                            <div class="row">
                                <% for (let review of listing.reviews) { %>
                                    <div class="card col-5 mb-3 ms-3">
                                        <div class="card-body">
                                            <i>
                                                <h5 class="card-title">@<%= review.author.username %>
                                                </h5>
                                            </i>

                                            <p class="card-text">
                                                <%= review.comment %>
                                            </p>
                                            <p class="card-text">
                                                <%= review.rating %> star
                                            </p>
                                        </div>

                                        <% if (currUser && review.author._id.equals(currUser._id)) { %>
                                            <form
                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                class="mb-3" method="post">
                                                <button class="btn btn-sm btn-dark">Delete</button>
                                            </form>
                                            <% } %>
                                    </div>
                                    <% } %>

                            </div>
                </div>
    </div>